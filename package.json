{
  "name": "phantasma-sdk-ts",
  "version": "0.2.0-rc.4",
  "description": "Javascript SDK for interacting with the Phantasma Chain",
  "author": "Phantasma Team",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public",
    "tag": "rc"
  },
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "build": "tsc",
    "build:umd": "tsc && browserify dist/index.js -s phantasma > html/phantasma.js",
    "test": "jest",
    "tests": "jest",
    "coverage": "jest --coverage",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "prettier-watch": "onchange 'src/**/*.ts' -- prettier --write {{changed}}"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/phantasma-io/phantasma-ts.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/phantasma-io/phantasma-ts/issues"
  },
  "homepage": "https://github.com/phantasma-io/phantasma-ts#readme",
  "dependencies": {
    "@ledgerhq/hw-transport-node-hid": "^6.29.13",
    "@ledgerhq/hw-transport-webusb": "^6.29.12",
    "big-integer": "^1.6.52",
    "bip32": "^3.1.0",
    "bip39": "^3.1.0",
    "bs58": "^5.0.0",
    "cross-fetch": "^3.2.0",
    "crypto-js": "^4.2.0",
    "csharp-binary-stream": "^1.1.0",
    "elliptic": "^6.6.1",
    "ethereumjs-wallet": "^1.0.2",
    "tiny-secp256k1": "^2.2.4",
    "wif": "^2.0.6"
  },
  "devDependencies": {
    "@types/bs58": "^4.0.4",
    "@types/crypto-js": "^4.2.2",
    "@types/elliptic": "^6.4.18",
    "@types/jest": "^30.0.0",
    "@types/wif": "^2.0.5",
    "browserify": "^17.0.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.4.0",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.4",
    "typescript": "^4.9.5",
    "typescript-eslint": "^8.46.1"
  }
}
