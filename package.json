{
  "name": "phantasma-sdk-ts",
  "version": "0.1.76",
  "description": "Javascript SDK for interacting with the Phantasma Chain",
  "author": "Phantasma Team",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:umd": "tsc && browserify dist/index.js -s phantasma > html/phantasma.js",
    "test": "jest",
    "tests": "jest",
    "coverage": "jest --coverage",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "prettier-watch": "onchange 'src/**/*.ts' -- prettier --write {{changed}}"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/phantasma-io/phantasma-ts.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/phantasma-io/phantasma-ts/issues"
  },
  "homepage": "https://github.com/phantasma-io/phantasma-ts#readme",
  "dependencies": {
    "@ledgerhq/hw-transport-node-hid": "^6.27.1",
    "@ledgerhq/hw-transport-webusb": "^6.27.1",
    "big-integer": "^1.6.50",
    "bip32": "^3.0.1",
    "bip39": "^3.0.4",
    "bs58": "^5.0.0",
    "cross-fetch": "^3.1.4",
    "crypto-js": "^4.1.1",
    "csharp-binary-stream": "^1.0.3",
    "elliptic": "^6.5.4",
    "ethereumjs-wallet": "^1.0.2",
    "tiny-secp256k1": "^2.2.1",
    "wif": "^2.0.6"
  },
  "devDependencies": {
    "@types/bs58": "^4.0.4",
    "@types/crypto-js": "^4.2.2",
    "@types/elliptic": "^6.4.18",
    "@types/jest": "^29.5.14",
    "@types/wif": "^2.0.5",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "browserify": "^17.0.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.4",
    "typescript": "^4.9.5"
  }
}
